<!-- ======= Create Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Create</h2>
            <p>New Accommodation</p>
        </div>
        <div class="row mt-1">
            <div class="col-lg-10 col-sm-auto mt-2 mt-lg-0 m-auto d-flex">
                <form action="/create" name="submitForm" method="post" class="create-form">
                    <div class="my-3">
                        {{#if error}}
                            {{#each error.messages}}
                                <div class="error-message">{{this}}</div>
                            {{/each}}
                        {{/if}}
                    </div>

                    <div class="row mt-3 mb-3 form-group">
                        <div class="input-group mb-1">
                            <label class="input-group-text col-md-2 col-lg-2 col-sm-auto" for="name">Name</label>
                            <input type="text" name="name" id="name" placeholder="Accommodation Name" value="{{name}}"
                                class="form-control {{#if error.fields.name}}border-danger{{/if}}" />
                        </div>
                        <div class="input-group mt-1">
                            <label class="input-group-text col-md-2 col-lg-2 col-sm-auto" for="city">Location</label>
                            <input type="text" name="city" id="city" placeholder="Accommodation address"
                                value="{{city}}" class="form-control {{#if error.fields.city}}border-danger{{/if}}" />
                        </div>
                    </div>

                    <div class="row mt-3 mb-3 form-group">
                        <div class="input-group w-50">
                            <label class="input-group-text" for="price">Price</label>
                            <input type="number" placeholder="Per Night" name="price" id="price" title="Price per Night"
                                min="0" step="0.10" value="{{price}}"
                                class="form-control {{#if error.fields.price}}border-danger{{/if}}" />
                        </div>
                        <div class="input-group w-50">
                            <label class="input-group-text" for="beds">Beds</label>
                            <input type="number" name="beds" id="beds" title="Number of beds" value="{{beds}}"
                                class="form-control {{#if error.fields.beds}}border-danger{{/if}}" />
                        </div>
                    </div>

                    <div class="row mt-3 mb-3">
                        <div class="form-group">
                            <input type="text" name="imageUrl" id="imageUrl" placeholder="Cover Image Url"
                                value="{{imageUrl}}"
                                class="form-control mb-2 {{#if error.fields.imageUrl}}border-danger{{/if}}" />
                            <input type="text" name="gallery" id="gallery" placeholder="Second Image Url"
                                value="{{gallery}}"
                                class="form-control mt-2 {{#if error.fields.gallery}}border-danger{{/if}}" />
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea name="description" id="description" rows="6"
                            placeholder="Add an attractive description to your place..."
                            class="form-control text-opacity-75 text-dark {{#if error.fields.description}}border-1 border-danger{{/if}}">
                        {{description}}
                        </textarea>
                    </div>

                    <div class="text-center"><button type="submit">Save</button></div>
                </form>
            </div>
        </div>
    </div>
</section>